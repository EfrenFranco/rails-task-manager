<div class="container">
<h1>My Tasks</h1>
  <div class="cards">
    <% @tasks.each do |task| %>
      <h4><%= link_to task.title, task_path(task) %></h4>
      <p><%= task.details %></p>
      <p><%= task.completed ? "✔" : "❌" %></p>
    <% end %>
    <p><%= link_to "Add New Task", new_task_path, class: "btn btn-primary" %> </p>

  </div>
</div>
