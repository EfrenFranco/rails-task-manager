<div class="container mt-3">
<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed ? "✔" : "❌" %></p>
<p><%= link_to "Home", tasks_path, class: "btn btn-light" %> </p>
<p><%= link_to '🗑️', task_path(@task), class: 'btn btn-light', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you wanna delete?' }  %></p>
<p><%= link_to "Edit", edit_task_path, class: "btn btn-outline-dark" %> </p>

</div>
